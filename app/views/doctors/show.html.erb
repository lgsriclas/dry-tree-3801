<h2><%= @doctor.name %></h2>
<h4>Specialty: </h4> <%= @doctor.specialty %>
<h4>University: </h4> <%= @doctor.university %>
<h4>Hospital: </h4> <%= @doctor.hospital.name %>
<h4>Patients: </h4>
<% @doctor.patients.each do |patient| %>
  <%= patient.name %><br>
  <% patient.doctor_patients.each do |dp| %>
  <section id="dp-<%= dp.id %>">
    <%= button_to "Remove #{patient.name}", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %>
  <br>
  <br>
  </section>
  <% end %>
<% end %>
